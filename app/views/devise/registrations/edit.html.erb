<div class="container">
 <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
  <h2>ユーザーの編集を行う</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_messages! %>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
    </div>
    <br>

    <div class="field">
     <%= f.label :名前 %><br />
     <%= f.text_field :name, class: "form-control" %>
    </div>

    <br>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :current_password, autocomplete: "off",class: "form-control", placeholder: "新しいパスワード" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "変更する" , class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

<h3>アカウントを削除する</h3>

 <%= button_to "削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-primary btn-block" %>

<%= link_to "Back", :back %>

</div>
</div>
