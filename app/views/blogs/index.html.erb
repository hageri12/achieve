<section class="function conainer-fluid">
<div class="container">
 <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <p><%= notice %></p>
  <h1>ブログ一覧</h1>
   <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>
  <% @blog.each do |blog| %>
   <div class="row">
    <h4><strong><%= blog.title %></strong></h4>
    <p><%= blog.content %></p>
    <%= profile_img(blog.user) if profile_img(blog.user) %>
    <p><%= blog.user.name %></p>
    <%= link_to blog_path(blog) do %>
      <h4><strong><%= blog.title %></strong></h4>
    <% end %>
    <%= link_to "ブログを編集する", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
    <%= link_to "ブログを削除する", blog_path(blog.id), method: :delete, data: { confirm:"本当に削除していいですか" }, class: 'btn btn-default btn-sm btn btn-danger'%>
   </div>
  <% end %>
　</div>
</div>

<div id="blog-top-btn" class="blog-top-btn">
  <p><a class="move-blog-top" id="move-blog-top">▲</a></p>
</div>
</section>
